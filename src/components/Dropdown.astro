---
const { option1, option2, option3, option4, funktion } = Astro.props;
---

<div class="custom_select">
  <select name={funktion} aria-placeholder="Vælg">
    <option value="0">Vælg</option>
    <option value="1">{option1}</option>
    <option value="2">{option2}</option>
    <option value="3">{option3}</option>
    <option value="4">{option4}</option>
  </select>
</div>

<style>
  select {
    background-color: var(--bg-color);
    width: 250px;
    border: var(--kurv-color) var(--border-xs);
    font-size: var(--step-0);
    appearance: none; /* Remove default arrow */
    background-image: url(../icons/CaretDown.svg);
    background-repeat: no-repeat;
    background-position: center right;
    padding: var(--space-s) var(--space-m);
  }
</style>

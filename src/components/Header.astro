---
import NavPunkt from "./Nav_punkt.astro";
import Kurv from "./Kurv.astro";
---

<header>
  <div><img src="/logo.svg" alt="" /></div>
  <nav>
    <NavPunkt punkt="Til virksomheder" underline="yellow" href="#" />
    <NavPunkt punkt="Om os" underline="green" href="#" />
    <NavPunkt punkt="Kontakt" underline="red" href="#" />
    <NavPunkt punkt="Shop" underline="blue" href="#" />

---
const { tekst, variant } = Astro.props;
---

<button data-variant={variant}><h4 class="button_tekst">{tekst}</h4></button>

<style>
  /* generelt knap */

  button h4 {
    color: var(--bg-color);
    text-transform: uppercase;
    font-stretch: condensed;
  }

  button:hover h4 {
    color: var(--pink-dark);
  }

  /* lyserød knap */

  [data-variant="primaryButton"] {
    background-color: var(--pink-dark);
    padding: var(--space-4xl);
    padding-bottom: var(--space-xs);
    padding-top: var(--space-xs);
    border-radius: 3px;
    border: var(--pink-dark) var(--border-l);
  }

  [data-variant="primaryButton"]:hover {
    background-color: var(--bg-color);
    padding: var(--space-4xl);
    padding-bottom: var(--space-xs);
    padding-top: var(--space-xs);
    border-radius: var(--border-radius-default);
    border: var(--pink-dark) var(--border-l);
  }

  [data-variant="primaryButton"]:hover h4 {
    color: var(--pink-dark);
  }

  /* blå knap */
  [data-variant="secondaryButton"] {
    background-color: var(--blue-dark);
    padding: var(--space-4xl);
    padding-bottom: var(--space-xs);
    padding-top: var(--space-xs);
    border-radius: 3px;
    border: var(--blue-dark) var(--border-l);
  }

  [data-variant="secondaryButton"] h4 {
    color: var(--bg-color);
  }

  [data-variant="secondaryButton"]:hover {
    color: var(--blue-dark);
    background-color: var(--bg-color);
    padding: var(--space-4xl);
    padding-bottom: var(--space-xs);
    padding-top: var(--space-xs);
    border-radius: var(--border-radius-default);
    border: var(--blue-dark) var(--border-l);
  }
  [data-variant="secondaryButton"]:hover h4 {
    color: var(--blue-dark);
  }

  /* læg i kurv */

  [data-variant="LagIKurvButton"] {
    background-color: var(--blue-light);
    padding: var(--space-4xl);
    padding-bottom: var(--space-xs);
    padding-top: var(--space-xs);
    border-radius: 3px;
    border: var(--blue-light) var(--border-l);
  }

  [data-variant="LagIKurvButton"] h4 {
    color: var(--bg-color);
  }

  [data-variant="LagIKurvButton"]:hover {
    background-color: var(--blue-dark);
    padding: var(--space-4xl);
    padding-bottom: var(--space-xs);
    padding-top: var(--space-xs);
    border-radius: 3px;
    border: var(--blue-dark) var(--border-l);
  }
  [data-variant="LagIKurvButton"]:hover h4 {
    color: var(--bg-color);
  }

  /* webshop_cardButton*/

  [data-variant="webshopCardButton"] {
    color: var(--pink-light);
    background-color: var(--bg-color);
    padding: var(--space-4xl);
    padding-bottom: var(--space-xs);
    padding-top: var(--space-xs);
    border-radius: var(--border-radius-default);
    border: var(--pink-light) var(--border-l);
  }
  [data-variant="webshopCardButton"]h4,
  [data-variant="webshopCardButton"]:hover h4 {
    color: var(--pink-light);
  }

  /* GavekortButton */
  [data-variant="GavekortButton"] {
    color: var(--green);
    background-color: var(--bg-color);
    padding: var(--space-3xl);
    padding-bottom: var(--space-2xs);
    padding-top: var(--space-2xs);
    border-radius: 3px;
    border: var(--green) var(--border-l);
  }
  [data-variant="GavekortButton"]h4 {
    color: var(--green);
  }

  [data-variant="GavekortButton"]:hover {
    color: var(--green);
    background-color: var(--green-exLight);
    padding: var(--space-3xl);
    padding-bottom: var(--space-2xs);
    padding-top: var(--space-2xs);
    border-radius: 3px;
    border: var(--green) var(--border-l);
  }
  [data-variant="GavekortButton"]:hover h4 {
    color: var(--green);
  }

  [data-variant="GavekortButton"]:focus {
    color: var(--bg-color);
    background-color: var(--green);
    padding: var(--space-3xl);
    padding-bottom: var(--space-2xs);
    padding-top: var(--space-2xs);
    border-radius: 3px;
    border: var(--green) var(--border-l);
  }
</style>

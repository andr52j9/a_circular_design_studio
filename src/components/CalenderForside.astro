---
const { Dato, dag, tidspunkt, sted } = Astro.props;
---

<article>
  <div class="top">
    <div class="wrapper">
      <h3>{Dato}</h3>
      <h6 class="dag">{dag}</h6>
    </div>
  </div>

  <h6 class="sted">{sted}</h6>
  <h4>{sted}</h4>
  <h5>{tidspunkt}</h5>
</article>
<style>
  article {
    display: flex;
    flex-direction: column;
  }

  h6,
  h4 {
    padding-bottom: var(--space-2xs);
  }
  .top::after {
    content: "";
    display: block;
    margin-top: var(--space-2xs);
    height: 3px;
    top: 5px;
    background-color: var(--yellow);
    transition: all 0.3s;
    width: 200px;
  }

  .sted {
    padding-top: var(--space-xl);
  }

  h5 {
    font-weight: var(--font-weight-light);
  }
  h6 {
    font-weight: var(--font-weight-light);
  }
  .dag {
    padding-left: var(--space-2xs);
  }
  .wrapper {
    display: flex;
    flex-direction: row;
    align-items: baseline;
  }
</style>

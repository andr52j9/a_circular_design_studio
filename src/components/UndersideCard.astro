---
const { underside, img, farve } = Astro.props;
---

<div class="card_wrapper">
  <img src={img} alt={underside} />
  <div class={`text_wrapper ${farve}`}><h5>{underside}</h5></div>
</div>
<style>
  .card_wrapper {
    max-width: 300px;
    max-height: 440px;
  }
  .text_wrapper {
    position: relative;
    z-index: 2;
    width: 257px;
    height: 62px;
  }
  .blue {
    background-color: var(--blue);
  }
</style>

---
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
import UndersideCard from "../components/UndersideCard.astro";
import WebshopCard from "../components/WebshopCard.astro";
import Forms from "../components/Forms.astro";
import InstaCard from "../components/InstaCard.astro";
import Dropdown from "../components/Dropdown.astro";
import TeametBag from "../components/TeametBag.astro";
import Calendar from "../components/Calendar.astro";
import Carousel from "../components/Carousel.astro";
import AntalButton from "../components/AntalButton.astro";
import CalenderForside from "../components/CalenderForside.astro";
import KurvCard from "../components/KurvCard.astro";
import Singleview from "../layouts/Singleview.astro";
import Breadcrumbs from "../components/Breadcrumbs.astro";
---

<Layout title="Komponenter | A Circurlar Design Studio">
  <Singleview
    billede1="/img/lampe.webp"
    billede2="/img/lampe1.webp"
    billede3="/img/lampe2.webp"
    billede4="/img/lampe3.webp"
    produktnavn="Stacks The Lamp"
    pris="kr 1.895,000"
    info=" 'Stacks The Lamp' er vores første bud på en bordlampe, der som alle vores andre produkter er skabt af geanvendt plast, og kommer i fem friske farver, der vil passe i de fleste hjem! Lampen er lavet i samarbejde med KS Lightning Group, der snart i 50 år har produceret lamper og tilbehør i Danmark. KS lightning Group har stået for fremstillingen af lampeskærme og elektronikken, og vi har gjort hvad vi er bedst, så vi har haft fokus på design og cirkulær produktion, og det betyder selvfølgelig at lampen er lavet af 100% genanvendt plast."
  />
  <Carousel />
  <Calendar />
  <Dropdown
    funktion="Farve"
    option1="Mango Haze"
    option2="Blueberry Blizzard"
    option3="Cloudy Peach"
    option4="Dragonfruit Drizzle"
  />
  <Forms variant="primaryForms" tekst="Forms" />
  <Forms variant="secondaryForms" tekst="Knap" />

  <UndersideCard
    farve="blue"
    img="/img/workshop.webp"
    underside="workshop"
    link="workshop"
  />
  <UndersideCard
    farve="green"
    img="/img/workshop.webp"
    underside="rådgivning"
    link=""
  />

  <UndersideCard farve="blue" img="/img/workshop.webp" underside="workshop" />
  <Button variant="primary" tekst="Kontakt os" />
  <Button variant="secondary" tekst="Læg i kurv" />
  <Button variant="tertiary" tekst="En anden" />
  <WebshopCard
    produktnavn="Stacks The Lamp"
    prisfra="pris fra"
    pris="kr 1.895,00"
    img="/img/lampe.webp"
  />
  <InstaCard img="/img/regtangularBakke.webp" />
  <TeametBag
    img="/img/andreas.webp"
    navn="ANDREAS ZACHO"
    titel="Creative Director | CEO | Main circular force"
    beskrivelse="Andreas er grundlægger og CEO og den kreative mastermind i A CIRCULAR DESIGN STUDIO. Der var ikke noget af det her, der var sket, hvis det ikke var for ham."
    laesMere="Læs mere om Andreas +"
    kontakt="kontakt"
    mail="andreaszacho@acirculardesignstudio.com"
  />

  <AntalButton
    tal="1"
    tekst="Antal"
    icon_plus="/icons/plus.svg"
    icon_minus="/icons/minus.svg"
  />
  <CalenderForside
    Dato="9"
    dag="Freadg"
    sted="Nørrebrohallen"
    sted="FLID julemarked"
    tidspunkt="14.00-20.00"
  />

  <KurvCard pris="99" />

  <Breadcrumbs tekst="køb produkter" icon="/icons/Breadcrumb.svg" />
</Layout>
